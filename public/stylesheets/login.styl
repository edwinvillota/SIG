.log-form
  display flex
  justify-content center
  width 100%
  height 100%
  color white
  .log-form-container
    display block
    width 400px
    border-radius 10px
    .title-container
      position relative
      width 100%
      height 50px
      line-height 50px
      text-align center
      border-radius 10px 10px 0 0
      background-color rgb(78, 179, 79)
    .inputs-container
      position relative
      width 100%
      background-color #1a1a1a
    .footer-container
      position relative
      width 100%
      text-align center
      padding 10px 0
      background-color #1a1a1a
      border-radius 0 0 5px 5px
      input
        width 100px
        border-radius 5px
        border none
        height 30px
        background-color rgb(78, 179, 79)
        color white
        cursor pointer
        &:hover
          background-color rgb(23, 194, 19)
        &:focus
          outline none
    .login-control
      display inline-block
      width 90%
      text-align center
      margin 10px
      line-height 30px
      input
        float right
        width 70%
        background-color white
        border solid 1px white
        color black
        border-radius 5px
        height 30px
        padding 0 5px
        &:focus
          outline none
